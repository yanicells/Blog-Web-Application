<header class="bg-gray-900">
    <nav aria-label="Global" class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">Blogcells</span>
                <img src="/images/logo.png" alt="Blogcells Logo"
                    class="h-16 w-auto" />
            </a>
        </div>
        
        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            <% if (locals.user && user !== "") { %>
                <div class="flex items-center space-x-4">
                    <span class="text-sm/6 font-semibold text-white">Welcome, <%= user %>!</span>
                    <a href="/logout" class="text-sm/6 font-semibold text-indigo-400 hover:text-indigo-300">Logout</a>
                </div>
            <% } else { %>
                <a href="/login" class="text-sm/6 font-semibold text-white">Log in <span aria-hidden="true">&rarr;</span></a>
            <% } %>
        </div>
    </nav>
</header>